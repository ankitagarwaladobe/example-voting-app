peline{
    agent any 

    tools{
        maven 'Maven 3.6.1'
    }
    stages{
        stage("build"){
            when {
                changeset '**/worker/**'
                branch 'master'
            }
            steps{
                echo "Building worker app..."
                dir("worker"){
                    sh 'mvn compile'
                }
                sleep 5 
            }
        }
        stage("test"){
            when {
                changeset '**/worker/**'
                branch 'master'
            }
            steps{
                echo "Testing worker app..."
                 dir("worker"){
                    sh 'mvn test'
                }
                sleep 3 
            }
        }
        stage("package"){
            when {
                changeset '**/worker/**'
                branch 'master'
            }
            steps{
                echo "packaging worker app..."
                 dir("worker"){
                    sh 'mvn package'
                }
                sleep 7
            }
        }

    }
    
    post{
        always{
            echo "This pipeline run is completed.."
        }
    }
}
