pipeline{
    agent{
        docker{
            image 'node:8.16-alpine'
        }
    }
    stages{
        stage("build"){
            when{
                changeset 'result/**'
            }
            steps{
                echo "Building node app..."
                dir("result"){
                    sh 'npm install'
                }
                sleep 5 
            }
        }
        stage("test"){
            when{
                changeset 'result/**'
            }
            steps{
                echo "Testing node app..."
                 dir("result"){
                    sh 'npm test'
                }
                sleep 3 
            }
        }
    }
    
    post{
        always{
            echo "This pipeline run is completed.."
        }
    }
}
